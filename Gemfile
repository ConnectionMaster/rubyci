source 'https://rubygems.org'

ruby '2.1.1' unless ENV['DEV']
gem 'rails', '~> 3.2'

gem 'sass-rails'
gem 'sass-rails-bootstrap'
gem 'jquery-rails'
gem 'coffee-rails'
gem 'uglifier'

group :development do
  gem 'heroku'
  gem 'foreman'
  gem 'thin'
  gem 'sqlite3'
  gem 'therubyracer'
  gem 'execjs'
end

group :production do
  gem 'pg'
  gem 'rails_12factor'
  gem 'newrelic_rpm'
  gem 'airbrake'
end
