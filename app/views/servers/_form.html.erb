<%= form_for(@server) do |f| %>
  <% if @server.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@server.errors.count, "error") %> prohibited this server from being saved:</h2>

      <ul>
      <% @server.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :eol_date %><br />
    <%= f.date_select :eol_date, use_month_numbers: true, start_year: Date.today.year, end_year: 10.years.from_now.year, include_blank: true %>
  </div>
  <div class="field">
    <%= f.label :uri %><br />
    <%= f.text_field :uri %>
  </div>
  <div class="field">
    <%= f.label :ordinal %><br />
    <%= f.text_field :ordinal %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
