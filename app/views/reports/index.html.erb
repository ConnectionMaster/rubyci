<h1>Listing reports</h1>

<table id="reports">
  <tr>
    <th>Server</th>
    <th>Datetime</th>
    <th>Branch</th>
    <th>Revision</th>
    <th>Summary</th>
    <th>Uri</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @reports.each do |report| %>
  <tr>
    <td><%= report.server.name %></td>
    <td><%= report.datetime %></td>
    <td><%= report.branch.sub(/ruby-/, '') %></td>
    <td><%= report.revision %></td>
    <td><%= report.summary.sub(/^[^\x28]+(?:\s*\([^\x29]*\)|\s*\[[^\x5D]*\])*\s*/, '') %></td>
    <td><%= link_to "log", report.uri %></td>
    <td><%= link_to 'Show', report %></td>
    <td><%= link_to 'Edit', edit_report_path(report) %></td>
    <td><%= link_to 'Destroy', report, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

